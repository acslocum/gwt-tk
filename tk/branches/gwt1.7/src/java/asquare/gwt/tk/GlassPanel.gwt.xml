<module>
	<inherits name="com.google.gwt.user.User"/>
	
	<replace-with class="asquare.gwt.tk.client.ui.behavior.impl.GlassPanelControllerStandard">
		<when-type-is class="asquare.gwt.tk.client.ui.behavior.GlassPanelController"/>
	</replace-with>
	
	<replace-with class="asquare.gwt.tk.client.ui.behavior.impl.GlassPanelControllerIE6">
		<when-type-is class="asquare.gwt.tk.client.ui.behavior.GlassPanelController"/>
		<any>
			<when-property-is name="user.agent" value="ie6"/>
			<when-property-is name="user.agent" value="ie8"/>
		</any>
	</replace-with>
	
	<replace-with class="asquare.gwt.tk.client.ui.behavior.impl.GlassPanelControllerSafari">
		<when-type-is class="asquare.gwt.tk.client.ui.behavior.GlassPanelController"/>
		<when-property-is name="user.agent" value="safari"/>
	</replace-with>
	
<!-- this rule increases complile time for Demo app by 30-40%
	<inherits name="asquare.gwt.tk.RenderMode"/>
	
	<replace-with class="asquare.gwt.tk.client.ui.behavior.impl.GlassPanelControllerIE6ImplQuirks">
		<when-type-is class="asquare.gwt.tk.client.ui.behavior.GlassPanelController"/>
		<when-property-is name="compat.mode" value="BackCompat"/>
		<any>
			<when-property-is name="user.agent" value="ie6"/>
			<when-property-is name="user.agent" value="ie8"/>
		</any>
	</replace-with>
	
	<replace-with class="asquare.gwt.tk.client.ui.behavior.impl.GlassPanelControllerIE6ImplStrict">
		<when-type-is class="asquare.gwt.tk.client.ui.behavior.GlassPanelController"/>
		<when-property-is name="compat.mode" value="CSS1Compat"/>
		<any>
			<when-property-is name="user.agent" value="ie6"/>
			<when-property-is name="user.agent" value="ie8"/>
		</any>
	</replace-with>
 -->
</module>
